@page "{id:int?}"
@model Andreea_Zoicas_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoryData.Categories)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => category.CategoryName)</td>
                <td>
                    <a asp-page="./Index" asp-route-id="@category.ID">Select</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CategoryData.Books != null)
{
    <h3>Books in Selected Category</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.CategoryData.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author?.FullName ?? "Unknown Author"</td>
                </tr>
            }
        </tbody>
    </table>
}
